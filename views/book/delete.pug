extends ../layout

block content

    h1 #{title}: #{book.title}

    if bookinstances.length

        p #[strong Delete the following books instances before attempting to delete this book.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Books Instances
            dl
                each bookinstance in bookinstances
                    dt
                        a(href=bookinstance.url) #{book.title}
                    dd #{bookinstance.imprint}

    else
        p Do you really want to delete this Author?

        form(method='POST')
            div.form-group
                input#bookid.form-control(type='hidden', name='authorid', value=book._id )
            div.form-group
                button.btn.btn-primary(type='submit') Delete
